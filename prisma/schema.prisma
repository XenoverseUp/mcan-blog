generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id            Int          @id @default(autoincrement())
  slug          String       @unique @db.VarChar(255)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  draft         Boolean      @default(true)
  title         String       @db.VarChar(255)
  subtitle      String
  coverImage    String?
  publication   Publication
  type          PostType?
  previewUrl    String?      @db.VarChar(255)
  repositoryUrl String?      @db.VarChar(255)
  references    String[]
  externalLinks String[]
  view          Int          @default(0)
  wordCount     Int
  content       PostContent?

  @@index([slug])
}

model PostContent {
  id      Int    @id @unique @default(autoincrement())
  meta    Post   @relation(fields: [metaId], references: [id])
  content String
  metaId  Int    @unique
}

enum Publication {
  OPINION
  TUTORIAL
  SNIPPET
}

enum PostType {
  EASY
  MEDIUM
  CHALLENGING
  CONTROVERSIAL
  SUGGESTION
}
